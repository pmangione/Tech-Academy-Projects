
@model ChallengeMCV.Models.ComicBook
@{
    ViewBag.Title = "Details";
}

<h2>Details About @Model.ComicTitle #@Model.EpisodeNumber</h2>

<p>Episode Title: @Model.EpisodeTitle</p>

@{
    var characters = Model.Characters.Select(p => p.Name).ToArray();
    var characterString = String.Join(", ", characters);
    <p><strong>Starring: </strong> @characterString</p>
}



<p>@Html.ActionLink("Back to All Comics", "Index")</p>